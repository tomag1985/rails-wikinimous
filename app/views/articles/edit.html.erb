<h1><%= @article.title %></h1>

<%= form_for(@article) do |a| %>

	<div class="form-group">
		<%= a.label :title, "Title" %>
		<%= a.text_field :title, class: "form-control" %>

		<%= a.label :details, "Content" %>
		<%= a.text_area :content, class: "form-control" %>


		<hr>

		<%= t.submit class:"btn btn-primary" %>
			<%= link_to articles_path do %>
			<div class="btn btn-primary">Back to list</div>
		<% end %>
	</div>
<% end %>
  

